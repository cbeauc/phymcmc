import phymcmc.plot
import sys

#
# =============================================================================
#
#                                   Main
#
# =============================================================================
#

nburn = 0
bid = 1
if sys.argv[bid][:2] == '-n':
	if len(sys.argv[bid]) > 2:
		nburn = int(float(sys.argv[bid][2:]))
		bid += 1
	else:
		nburn = int(float(sys.argv[bid+1][2:]))
		bid += 2
chainfile = sys.argv[bid]
savefile = sys.argv[bid+1].split('.pdf')[0]
phymcmc.plot.diagnostics( chainfile, savefile, nburn=nburn )
