import baccam
import numpy
import phymcmc.fits

dat = numpy.loadtxt("baccam.dat")
dathpi = dat[:,0]
datV = dat[:,1]
# Your data
# (feel free to pack other non-varying arguments in there)
dat = (dathpi,datV)

pdic = dict(
	Vlim = 10.0**0.5, # Limit of detection for V
	N = 4.0e8,	# Ncells as per paper
	tI = 24.0, nI=16,
	p = datV.max()*0.1/4.0e8,
	c = 0.1,
	b = 1.0/datV.max(),
	V0 = datV[0]
)
pfit = ['p','c','b','V0']

# Create params structure
params = phymcmc.ParamStruct(pdic.copy(),pfit)

# Grab model instance
model = baccam.model(dat, params)

# Fit model to data
params,bfssr = phymcmc.fits.perform_fit(model,verbose=True)

# Solve and save results
t = numpy.linspace(0.0,dathpi[-1])
res = model.get_solution(t)
mV = numpy.hstack((numpy.matrix(t).T,res))
numpy.savetxt('soln_V.dat', mV)
